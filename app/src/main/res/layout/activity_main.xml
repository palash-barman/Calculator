<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9FAFEA"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen_id"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25dp"
        android:text="0"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="#35F3CD"
        android:gravity="center|right"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/acBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="AC"
            android:layout_margin="5dp"
            android:textColor="#3ACD05"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/paworBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="^"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/backBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="←"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
          />
        <Button
            android:id="@+id/divBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="/"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/sevenBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="7"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/eightBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="8"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/nineBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="9"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/mulBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="*"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/fourBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="4"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/fiveBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="5"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/sixBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="6"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/minBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="-"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/oneBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="1"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/twoBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="2"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/threeBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="3"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/plusBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="+"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">
        <Button
            android:id="@+id/zeroBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="0"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />
        <Button
            android:id="@+id/pointBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="."
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />

        <Button
            android:id="@+id/ansBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/butten"
            android:onClick="ButtonClick"
            android:text="Ans"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/equalBtn_id"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="="
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:onClick="ButtonClick"
            android:background="@drawable/butten"
            />


    </LinearLayout>
</LinearLayout>